<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/career_event_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Enterpreneur" />

        <TextView
            android:id="@+id/career_event_company"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/career_event_position"
            tools:text="Company sp. z o.o." />

        <TextView
            android:id="@+id/career_event_company_location"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/career_event_company"
            tools:text="WrocÅ‚aw, PL" />

        <TextView
            android:id="@+id/career_event_employment_duration"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/career_event_company_location"
            tools:text="Sep.2014-Mar.2017" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="Manufacturing Company converting plastics, paper and cardboard into office use commodity goods. Cast extrusion of various types of films, welding, recycling, graphic industry post printing processes. Private label production for domestic and export markets."
            android:layout_below="@id/career_event_employment_duration"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/career_event_duties_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duties:"
            android:layout_toEndOf="@id/career_event_employment_duration"
            />

        <ListView
            android:id="@+id/career_event_duties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/career_event_duties_label"
            android:layout_toEndOf="@id/career_event_employment_duration">
        </ListView>


    </RelativeLayout>

</merge>